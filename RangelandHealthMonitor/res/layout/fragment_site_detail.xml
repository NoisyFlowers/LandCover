<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
 >
 
	<TextView   
        android:id="@+id/fragment_site_detail_textview_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:text=""
	/>    
	
	<ScrollView 
	    android:id="@+id/fragment_site_detail_nav_scroll"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:layout_centerInParent="true"
	>
	
	    <RelativeLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	    >
		    <RelativeLayout
		        android:id="@+id/fragment_site_detail_nav_area"
			    android:layout_height="wrap_content"
			    android:layout_width="match_parent"
		        android:layout_centerHorizontal="true"
		        android:layout_marginTop="20dp"
			>
			    <Button
			        android:id="@+id/fragment_site_detail_button_transect_north"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerHorizontal="true"
			        android:layout_alignParentTop="true"
			        android:textSize="30sp"
			        android:text="@string/fragment_site_detail_status_direction_1_button"
			    />
			    <Button
			        android:id="@+id/fragment_site_detail_button_site_characterization"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerHorizontal="true"
			        android:layout_below="@id/fragment_site_detail_button_transect_north"
			        android:text="@string/fragment_site_detail_status_site_data_button"
			    />
			    <Button
			        android:id="@+id/fragment_site_detail_button_transect_south"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerHorizontal="true"
			        android:layout_below="@id/fragment_site_detail_button_site_characterization"
			        android:textSize="30sp"
			        android:text="@string/fragment_site_detail_status_direction_3_button"
			    />
			    <Button
			        android:id="@+id/fragment_site_detail_button_transect_east"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerVertical="true"
			        android:layout_toRightOf="@id/fragment_site_detail_button_site_characterization"
			        android:textSize="30sp"
			        android:text="@string/fragment_site_detail_status_direction_2_button"
			    />
			    <Button
			        android:id="@+id/fragment_site_detail_button_transect_west"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerVertical="true"
			        android:layout_toLeftOf="@id/fragment_site_detail_button_site_characterization"
			        android:textSize="30sp"
			        android:text="@string/fragment_site_detail_status_direction_4_button"
			    />
		    </RelativeLayout>
     
		    <LinearLayout 
		        android:orientation="vertical"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/fragment_site_detail_nav_area"
		        android:layout_centerHorizontal="true"
		        android:layout_marginTop="10dp"
			>
		    	<!-- dummy to prevent focus grab -->
			    <LinearLayout
			    	android:focusable="true" 
			    	android:focusableInTouchMode="true"
			   		android:layout_width="0px" 
			   		android:layout_height="0px"
			   	/>
			    
				<TextView   
			        android:id="@+id/fragment_site_detail_textview_dominant_woody_species"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/fragment_site_detail_dominant_woody_species"
				/>    
		       	<AutoCompleteTextView
			        android:id="@+id/fragment_site_detail_edittext_dominant_woody_species"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:singleLine="true"
					android:completionThreshold="1"
					android:imeOptions="actionNext"
			        android:nextFocusDown="@+id/fragment_site_detail_edittext_dominant_nonwoody_species"
				/>    
				<TextView   
			        android:id="@+id/fragment_site_detail_textview_dominant_nonwoody_species"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/fragment_site_detail_dominant_nonwoody_species"
			        android:layout_marginTop="5dp"
				/>    
		       	<AutoCompleteTextView
			        android:id="@+id/fragment_site_detail_edittext_dominant_nonwoody_species"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:singleLine="true"
					android:completionThreshold="1"
					android:imeOptions="actionDone"
				/>    
		       	
		    </LinearLayout>
    	</RelativeLayout>
	</ScrollView>

	<Button
        android:id="@+id/fragment_site_detail_button_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/fragment_site_detail_textview_status"
        android:visibility="invisible"
        android:text="@string/fragment_site_detail_status_summary_button"
    />
	
	<Button
        android:id="@+id/fragment_site_detail_button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="@string/fragment_site_detail_status_submit_button"
    />

    <Spinner
        android:id="@+id/fragment_site_detail_spinner_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:visibility="gone"
	/>    
	<TextView   
        android:id="@+id/fragment_site_detail_textview_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/fragment_site_detail_spinner_date"
        android:text="@string/fragment_site_detail_date_label"
        android:visibility="gone"
	/>    
	     
</RelativeLayout>
